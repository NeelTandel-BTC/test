<p id="notice"><%= notice %></p>

<h1>Tv Shows</h1>
<%= search_form_for @q do |f| %>
  <%= f.label :name_cont, 'Full Name' %>
  <%= f.search_field :name_or_channel_name_cont %>
  <%= f.submit %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Channel</th>
      <th>TV show</th>
      <th>Timing</th>
      <th>favourite</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tv_shows.each do |tv_show| %>
      <tr>
        <td><%= tv_show.channel.name %></td>
        <td><%= tv_show.name %></td>
        <td><%= tv_show.time %></td>
        <td>
          <%= link_to fav_or_not(tv_show), tv_show_like_unlike_path(tv_show)%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% link_to 'New Tv Show', new_tv_show_path %>
